<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:gravity="center">


    <TextView
        android:id="@+id/dialogtextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Enter Bed No."
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/alertedittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/dialogtextview"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:hint="Bed/Room No." />

    <requestFocus />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertedittext"
        android:layout_marginTop="15dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"

            android:background="?android:attr/selectableItemBackground"
            android:text="Cancel"
            android:textColor="#F75931" />

        <Button
            android:id="@+id/continue_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="15dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="Continue"
            android:textColor="#F75931" />
    </LinearLayout>

</RelativeLayout>